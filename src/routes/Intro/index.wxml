	</view>
	<view hidden="{{ page < 2 }}">
		<include src="./intro-5.wxml"/>
		<include src="./intro-6.wxml"/>
	</view>
	<view hidden="{{ page < 3 }}">
		<include src="./intro-7.wxml"/>
		<include src="./intro-8.wxml"/>
		<include src="./intro-9.wxml"/>
	</view>
